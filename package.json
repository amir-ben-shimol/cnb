{
	"name": "cnb",
	"version": "1.1.1",
	"description": "A simple tool for enforcing Git branch naming conventions",
	"main": "dist/index.js",
	"bin": {
		"cnb": "dist/cli.js"
	},
	"author": "Amir Ben Shimol",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "https://github.com/amir-ben-shimol/cnb"
	},
	"keywords": [
		"git",
		"branch",
		"cli",
		"git-branch",
		"branch-naming",
		"git-hooks",
		"branch-conventions",
		"automation",
		"naming-conventions",
		"git-automation",
		"devtools",
		"branch-helper",
		"ticket-prefix",
		"developer-tools",
		"typescript",
		"cnb",
		"simple-git",
		"git-workflow"
	],
	"scripts": {
		"husky:install": "husky",
		"git:config": "git config --local include.path ../.gitconfig",
		"setdev": "run-p husky:install git:config",
		"prepare": "pnpm setdev",
		"build": "tsc --project tsconfig.build.json",
		"start": "ts-node src/cli.ts",
		"type-check": "tsc --project ./tsconfig.json",
		"lint": "eslint -c ./.eslintrc.cjs --ignore-path ./.eslintignore \"./**/*.{ts,tsx,cjs}\"",
		"knip": "knip -c ./knip.json",
		"inflint": "inflint -c ./inflint.config.cjs",
		"prettier": "prettier --check **/*.{ts,js,cjs,json,yaml}"
	},
	"dependencies": {
		"@types/node": "22.5.5",
		"chalk": "4.1.2",
		"inquirer": "11.0.2",
		"simple-git": "3.27.0"
	},
	"devDependencies": {
		"@commitlint/cli": "19.5.0",
		"@exlint.io/inflint": "2.1.1",
		"@types/inquirer": "9.0.7",
		"@types/jest": "29.5.12",
		"@typescript-eslint/eslint-plugin": "7.18.0",
		"@typescript-eslint/parser": "7.18.0",
		"commitizen": "4.3.0",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-deprecation": "3.0.0",
		"eslint-plugin-i18next": "6.1.0",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-jsx-a11y": "6.9.0",
		"eslint-plugin-unicorn": "54.0.0",
		"eslint-plugin-unused-imports": "4.1.3",
		"husky": "9.1.6",
		"jest": "29.7.0",
		"knip": "5.30.4",
		"npm-run-all2": "6.2.3",
		"prettier": "3.3.3",
		"prettier-plugin-sh": "0.14.0",
		"ts-jest": "29.2.5",
		"ts-node": "10.9.2",
		"typescript": "5.5.4"
	},
	"packageManager": "pnpm@9.10.0",
	"engines": {
		"yarn": "please-use-pnpm",
		"pnpm": ">=9",
		"node": ">=20"
	}
}
