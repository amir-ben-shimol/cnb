{
	"name": "cnb",
	"version": "1.2.4",
	"description": "CLI tool for enforcing consistent Git branch naming conventions across teams and projects",
	"main": "dist/index.js",
	"bin": {
		"cnb": "dist/cli.js"
	},
	"author": "Amir Ben Shimol",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/amir-ben-shimol/cnb"
	},
	"keywords": [
		"git",
		"branch",
		"cli",
		"git-branch",
		"branch-naming",
		"git-hooks",
		"branch-conventions",
		"automation",
		"naming-conventions",
		"git-automation",
		"devtools",
		"branch-helper",
		"ticket-prefix",
		"developer-tools",
		"typescript",
		"cnb",
		"simple-git",
		"git-workflow",
		"git-branch-naming",
		"branch-naming-conventions",
		"create-new-branch",
		"lint",
		"linter"
	],
	"scripts": {
		"husky:install": "husky",
		"git:config": "git config --local include.path ../.gitconfig",
		"intro": "intro",
		"setdev": "run-p husky:install git:config intro",
		"prepare": "pnpm setdev",
		"build": "tsc --project tsconfig.build.json",
		"start": "ts-node src/cli.ts",
		"type-check": "tsc --project ./tsconfig.json",
		"lint": "eslint -c ./.eslintrc.cjs --ignore-path ./.eslintignore \"./**/*.{ts,tsx,cjs}\"",
		"knip": "knip -c ./knip.json",
		"inflint": "inflint -c ./inflint.config.cjs",
		"prettier": "prettier --check **/*.{ts,js,cjs,json,yaml}",
		"cnb": "npx cnb --check"
	},
	"dependencies": {
		"@types/node": "22.5.5",
		"chalk": "4.1.2",
		"inquirer": "11.0.2",
		"simple-git": "3.27.0"
	},
	"devDependencies": {
		"@commitlint/cli": "19.5.0",
		"@exlint.io/inflint": "2.1.1",
		"@types/inquirer": "9.0.7",
		"@types/jest": "29.5.13",
		"@typescript-eslint/eslint-plugin": "7.18.0",
		"@typescript-eslint/parser": "7.18.0",
		"commitizen": "4.3.0",
		"commitlint": "19.5.0",
		"cz-vinyl": "2.5.4",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-deprecation": "3.0.0",
		"eslint-plugin-i18next": "6.1.0",
		"eslint-plugin-import": "2.30.0",
		"eslint-plugin-jsx-a11y": "6.10.0",
		"eslint-plugin-unicorn": "55.0.0",
		"eslint-plugin-unused-imports": "4.1.4",
		"husky": "9.1.6",
		"inquirer": "8",
		"intro-cli": "1.1.2",
		"jest": "29.7.0",
		"knip": "5.30.5",
		"npm-run-all2": "6.2.3",
		"prettier": "3.3.3",
		"prettier-plugin-sh": "0.14.0",
		"ts-jest": "29.2.5",
		"ts-mock-api": "1.0.13",
		"ts-node": "10.9.2",
		"typescript": "5.6.2"
	},
	"packageManager": "pnpm@9.10.0",
	"engines": {
		"yarn": "please-use-pnpm",
		"pnpm": ">=9",
		"node": ">=20"
	}
}
